<%- include ('partials/_header'); -%>

<script type="text/javascript">
  const myHeaders = new Headers();
  myHeaders.append('authorization', `Bearer ${localStorage.token}`);

  fetch('/deleteUser', {
    method: 'GET',
    headers: myHeaders
  })
    .then(res => res.json())
    .then(data => console.log(data))
</script>


